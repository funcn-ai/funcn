  push:
    branches:
      - main
      - master
    paths:
      - 'packages/sygaldry_registry/components/**'
      - 'src/sygaldry_cli/templates/**'
      - 'src/sygaldry_cli/commands/docs.py'
  pull_request:
    branches:
      - main
      - master
    paths:
      - 'packages/sygaldry_registry/components/**'
      - 'src/sygaldry_cli/templates/**'
      - 'src/sygaldry_cli/commands/docs.py'
  workflow_dispatch:
    inputs:
      force_regenerate:
        description: 'Force complete regeneration of sygaldry.md files (overwrites user customizations)'
        required: false
        default: 'false'
        type: choice
        options:
          - 'false'
          - 'true'

permissions:
  contents: write
  pull-requests: write

jobs:
  generate-docs:
    runs-on: ubuntu-latest
    concurrency:
      group: ${{ github.workflow }}-${{ github.ref }}
      cancel-in-progress: true

    steps:
      - uses: actions/checkout@v4
        with:
          token: ${{ secrets.GITHUB_TOKEN }}

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11.x'

      - name: Install UV
        uses: astral-sh/setup-uv@v3

      - name: Create virtual environment
        run: uv venv .venv

      - name: Install dependencies
        run: |
          source .venv/bin/activate
          uv pip install -e .

      - name: Generate documentation for all components
        run: |
          source .venv/bin/activate
          # Generate docs preserving user customizations (default behavior)
          FORCE_FLAG=""
          if [ "${{ github.event.inputs.force_regenerate }}" = "true" ]; then
            FORCE_FLAG="--force-regenerate"
            echo "Force regeneration enabled - will overwrite user customizations"
          else
            echo "Preserving user customizations in existing sygaldry.md files"
          fi

          python -m sygaldry_cli.main docs generate --editor cursor $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor windsurf $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor cline $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor claude $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor sourcegraph $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor openai_codex $FORCE_FLAG
          python -m sygaldry_cli.main docs generate --editor amp_code $FORCE_FLAG

      - name: Check for changes
        id: changes
        run: |
          if [ -n "$(git status --porcelain)" ]; then
            echo "changes=true" >> $GITHUB_OUTPUT
            echo "Changes detected:"
            git status --porcelain
          else
            echo "changes=false" >> $GITHUB_OUTPUT
            echo "No changes detected"
          fi

      - name: Commit and push changes
        if: steps.changes.outputs.changes == 'true' && github.event_name == 'push'
        run: |
          git config --local user.email "action@github.com"
          git config --local user.name "GitHub Action"
          git add .

          COMMIT_MSG="docs: auto-update documentation for components"
          if [ "${{ github.event.inputs.force_regenerate }}" = "true" ]; then
            COMMIT_MSG="docs: force regenerate documentation for components"
          fi

          git commit -m "$COMMIT_MSG

          - Updated sygaldry.md files for all components (preserving user customizations)
          - Generated editor-specific rules
          - Triggered by changes in ${{ github.sha }}"
          git push

      - name: Create Pull Request
        if: steps.changes.outputs.changes == 'true' && github.event_name == 'pull_request'
        uses: peter-evans/create-pull-request@v6
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: |
            docs: auto-generate documentation for components

            - Updated sygaldry.md files for all components
            - Generated editor-specific rules
            - Triggered by PR ${{ github.event.number }}
          title: "docs: Auto-generate documentation"
          body: |
            This PR contains automatically generated documentation updates.

            Generated by the docs workflow for PR #${{ github.event.number }}.

            ### Changes:
            - Updated sygaldry.md files for modified components
            - Generated editor-specific rules for all supported editors

            ### Verification:
            Please review the generated documentation to ensure accuracy.
          branch: docs/auto-generated-${{ github.event.number }}
          delete-branch: true
